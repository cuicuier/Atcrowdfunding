    <context:component-scan base-package="com.cui.atcrowdfunding.*" use-default-filters="false">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>
	
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"></property>
        <property name="prefix" value="/WEB-INF/jsp/"></property>
        <property name="suffix" value=".jsp"></property>
    </bean>
    
    <bean id="exceptionResolver"  
        class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
        <!--异常解析器捕获异常，将异常对象存放到request域，属性名默认为exception(可以改)，前端页面会用到这个属性-->
        <!--<property name="exceptionAttribute" value="exception"/>-->
        <property name="exceptionMappings">  
            <props>
                <prop key="java.lang.Exception">error/error</prop>
                <prop key="com.cui.atcrowdfunding.exception.LoginFailException">login</prop>
            </props>
        </property>  
    </bean>

    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver" p:defaultEncoding="UTF-8">
        <property name="maxUploadSize" value="2097152"/>
        <property name="resolveLazily" value="true"/>
    </bean>

    <!--声明登录权限拦截器-->
    <mvc:interceptors>
        <bean id="loginInterceptor" class="com.cui.atcrowdfunding.interceptor.LoginInterceptor"></bean>
        <bean id="authInterceptor" class="com.cui.atcrowdfunding.interceptor.AuthInterceptor"></bean>
    </mvc:interceptors>
</beans>
